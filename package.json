{
  "name": "midnight-lizard",
  "author": {
    "name": "Pavel Agarkov",
    "email": "support@midnight-lizard.org"
  },
  "license": "MIT",
  "version": "11.0.0",
  "dependencies": {
    "@types/chrome": "0.1.32",
    "@types/firefox-webext-browser": "143.0.0",
    "reflect-metadata": "0.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Midnight-Lizard/Midnight-Lizard.git"
  },
  "devDependencies": {
    "archiver": "5.1.0",
    "ts-loader": "9.5.4",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "webpack": "5.104.1",
    "webpack-bundle-analyzer": "5.1.0",
    "webpack-cli": "6.0.1"
  },
  "scripts": {
    "watch": "webpack --watch --mode=development --devtool inline-source-map",
    "dev-build": "webpack --mode=development --devtool inline-source-map",
    "dev-build-analyze": "webpack --mode=development --env useBundleAnalyzer --devtool inline-source-map",
    "prod-build": "webpack --mode=production",
    "prod-pack": "npm run prod-build && node pack.js chrome && node pack.js firefox",
    "prod-pack:chrome": "npm run prod-build && node pack.js chrome",
    "prod-pack:firefox": "npm run prod-build && node pack.js firefox",
    "pack:firefox": "node pack.js firefox"
  }
}
